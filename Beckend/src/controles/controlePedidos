const db = require('../db');
const path = require('path');
const fs = require('fs');

exports.getAllPedidos = async (req, res, next) => {
  try {
    const [rows] = await db.query('SELECT * FROM pedido');
    res.json({ success: true, data: rows });
  } catch (err) {
    next(err);
  }
};

exports.mudarStatus = async (req, res, next) => {
  try {
    const { id, status } = req.body;
    await db.query('UPDATE pedido SET status = ? WHERE id = ?', [status, id]);
    res.json({ success: true, message: 'Status atualizado com sucesso' });
  } catch (err) {
    next(err);
  }
};

exports.concluirPedido = async (req, res, next) => {
  try {
    const { id, observacao } = req.body;
    const file = req.file;

    if (!file) {
      return res.status(400).json({ success: false, message: 'Imagem é obrigatória' });
    }

    const imagePath = `/uploads/${file.filename}`;
    const dataFinalizacao = new Date();

    await db.query(
      'UPDATE pedido SET status = ?, observacao = ?, imagem = ?, data_finalizacao = ? WHERE id = ?',
      ['Concluido', observacao, imagePath, dataFinalizacao, id]
    );

    res.json({ success: true, message: 'Pedido concluído com sucesso' });
  } catch (err) {
    next(err);
  }
};
