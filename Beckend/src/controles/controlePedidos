const fakePedidos = [
  {
    id: 1,
    id_usuario: 1,
    conteudo: "Caixa pequena",
    peso: 2,
    status: "Pendente",
    data_criacao: new Date(),
    data_finalizacao: null
  }
];

exports.getAllPedidos = async (req, res, next) => {
  try {
    res.json({ success: true, data: fakePedidos });
  } catch (err) {
    next(err);
  }
};

exports.mudarStatus = async (req, res, next) => {
  try {
    const { id, status } = req.body;
    const pedido = fakePedidos.find(p => p.id === parseInt(id));
    if (pedido) {
      pedido.status = status;
      res.json({ success: true, message: 'Status atualizado com sucesso', pedido });
    } else {
      res.json({ success: false, message: 'Pedido não encontrado' });
    }
  } catch (err) {
    next(err);
  }
};

exports.concluirPedido = async (req, res, next) => {
  try {
    const { id, observacao } = req.body;
    const pedido = fakePedidos.find(p => p.id === parseInt(id));
    if (pedido) {
      pedido.status = 'Concluido';
      pedido.observacao = observacao;
      pedido.data_finalizacao = new Date();
      res.json({ success: true, message: 'Pedido concluído com sucesso', pedido });
    } else {
      res.json({ success: false, message: 'Pedido não encontrado' });
    }
  } catch (err) {
    next(err);
  }
};
